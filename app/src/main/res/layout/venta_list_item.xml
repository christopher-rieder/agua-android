<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="96dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/circle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="A" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/cliente_list_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Christopher Rieder" />

        <TextView
            android:id="@+id/venta_list_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="AAAAAAAAAAA" />

        <TextView
            android:id="@+id/cliente_list_domicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Las Heras 933" />

    </LinearLayout>

    <Button
        android:id="@+id/venta_list_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:text="X" />


</LinearLayout>